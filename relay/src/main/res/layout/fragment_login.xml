<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="net.relayproject.relayclient.login.LoginActivity$PlaceholderFragment"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/fragment_login_text"
        android:textSize="16sp"
        android:text="@string/fragment_login_html"
        android:padding="16dp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="4"
        >

        <Button
            android:id="@+id/btn_pgp_create_identity"
            android:text="@string/btn_pgp_create_identity_text"
            android:layout_margin="15dp"
            android:padding="30dp"
            android:textSize="18sp"
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:layout_weight="1"
            />

        <Button
            android:id="@+id/btn_pgp_import_identity"
            android:text="@string/btn_pgp_import_identity_text"
            android:layout_margin="15dp"
            android:padding="30dp"
            android:textSize="18sp"
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:enabled="false" />

        <Button
            android:id="@+id/btn_pgp_no_identity"
            android:text="@string/btn_pgp_no_identity_text"
            android:layout_margin="15dp"
            android:padding="30dp"
            android:textSize="18sp"
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:layout_weight="1"
            />
    </LinearLayout>

</LinearLayout>
